include .config.vars
ifndef CP
  CP=cp
endif

SRC = $(wildcard src/*.js)
CORE_FILES = $(SRC:src/%.js=lib/%.js)

LIB_FILES = js/lib/buzz.js js/lib/contextmenu.js \
            js/lib/filesaver.js js/lib/cookie.js \
            js/lib/moment.js js/lib/replacetext.js js/lib/strophe.js \
            js/lib/strophe.attention.js js/lib/strophe.caps.js \
            js/lib/strophe.disco.js js/lib/strophe.ping.js \
            js/lib/strophe.storage.js \
            js/lib/strophe.time.js js/lib/strophe.version.js \
            js/lib/xbbcode.js

CSS_FILES_GLOBAL = css/global/layout.css css/global/fonts.css \
                    css/global/color.css css/global/icons.css \
                    css/global/jquery-ui.css \
                    css/global/contextmenu.css css/global/borders.css
ifndef CDN_PREFIX
  CDN_PREFIX = ${PREFIX}
endif
JS_FILES = ${CORE_FILES} ${LIB_FILES} config.js emoticons.js
CSS_FILES = ${CSS_FILES_GLOBAL} css/global/import.css


all: submodules init index.html ${JS_FILES} ${CSS_FILES}

init:
	mkdir -p js/lib/ lib/

clean:
	rm -f index.html config.js emoticons.js ${CORE_FILES} js/lib/*.js

distclean: clean
	rm .config.vars
	rm Makefile

ifneq (.,${CDN_PREFIX})
install: all install-cdn
ifneq (.,${PREFIX})
	mkdir -p "${PREFIX}"
	$(CP) -au index.html config.js emoticons.js "${PREFIX}/"
endif
	$(CP) -au "css/alt" "${CDN_PREFIX}/css/"
	$(CP) -au "css/global/images/" "${CDN_PREFIX}/css/global/"
	$(CP) -au "img" "sounds" "${CDN_PREFIX}/"
else
install: all ${LIB_FILES}
endif
	$(CP) -Tau "emoticon-packs" "${CDN_PREFIX}/img/emoticons/packs"
	touch -a "${PREFIX}/custom.css" "${PREFIX}/config.custom.js"

install-cdn: install-init install-js install-css-global

install-init:
	mkdir -p "${CDN_PREFIX}/css/" "${CDN_PREFIX}/js/"

install-js: install-js-core install-js-lib

install-js-core: ${CORE_FILES}
	mkdir -p "${CDN_PREFIX}/lib/"
	$(CP) -au $^ "${CDN_PREFIX}/lib/"
install-js-lib: ${LIB_FILES}
	mkdir -p "${CDN_PREFIX}/js/lib/"
	$(CP) -au $^ "${CDN_PREFIX}/js/lib/"
install-css-global: ${CSS_FILES}
	mkdir -p "${CDN_PREFIX}/css/global"
	$(CP) -au $^ "${CDN_PREFIX}/css/global/"

config.js: config.tpl.js .config.vars
	VERSION=${VERSION}
	if [ -d ".git" ]; then \
	    VERSION=`git describe --always`; \
	fi; \
	./setup.py $@ $$VERSION

index.html: index.tpl.html .config.vars
	./setup.py $@

emoticons.js: $(wildcard emoticon-packs/*/emoticons.conf) .config.vars
	./setup.py $@

lib: $(CORE_FILES)
lib/%.js: src/%.js
	babel $< -o $@

js/lib/buzz.js: js/lib/buzz/src/buzz.js
	$(CP) $^ $@

js/lib/contextmenu.js: js/lib/contextmenu/src/jquery.contextMenu.js
	$(CP) $^ $@

js/lib/filesaver.js: js/lib/filesaver/FileSaver.js
	$(CP) $^ $@

js/lib/cookie.js: js/lib/cookie/src/js.cookie.js
	$(CP) $^ $@

js/lib/moment.js: js/lib/moment/moment.js
	$(CP) $^ $@

js/lib/replacetext.js: node_modules/jquery-replacetext/replacetext.js
	$(CP) $^ $@

js/lib/strophe.js: js/lib/strophe/strophe.js
	$(CP) $^ $@

js/lib/xbbcode.js: js/lib/xbbcode/xbbcode.js
	$(CP) $^ $@

submodules:
	git submodule update --init

.PHONY: all js init submodules


.SECONDEXPANSION:

js/lib/strophe.%.js: js/lib/strophe-plugins/%/strophe.$$*.js
	$(CP) $^ $@
